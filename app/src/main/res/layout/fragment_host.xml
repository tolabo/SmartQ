<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vaibhav.smartq.host.HostTabsActivity$HostPlaceholderFragment">


    <TextView
        android:text="Current Token"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_t_qcurrent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.62"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="00000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_t_token"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:background="@drawable/roundedbg"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_t_qcurrent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:textAlignment="center" />

    <Button
        android:text="Next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/b_t_next"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_t_token"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="Client Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_t_next"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="Client Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_clientname"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center" />

    <TextView
        android:text="client@email.com"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_clientemail"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_clientname"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center" />

</android.support.constraint.ConstraintLayout>
