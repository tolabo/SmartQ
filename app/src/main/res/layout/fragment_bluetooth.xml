<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Scan Queues Near Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bstatus"
        android:padding="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
        android:textAlignment="center" />

    <Button
        android:text="Scan"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b_bscan" />


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:id="@+id/pb_bluetooth" />

    <ListView
        android:padding="5dp"
        android:id="@+id/lv_blist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>